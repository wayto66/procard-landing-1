                <div class="initial" style="background-color:transparent ;">
                    <p></p>
                </div>
                {% endif %}
                <div class="box-int">
                    <div class="thumb">
                        {% thumbnail item.imagem "44x46" crop='center' format='PNG' as im %}
                        <img src="{{ im.url }}" alt="">
