                    <div class="titulo">
                        <p>{{ item.nome }}</p>
                    </div>
                    <div class="preco">
                        <p>{{ item.preco }}</p>
                    </div>
                    {% if item.legenda %}
                    <div class="legenda">
                        <p>{{ item.legenda }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>
