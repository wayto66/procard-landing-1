{% extends "base.html" %}
{% load static %}
{% load thumbnail %}

{% block title %}{% if seo.title %}{{ seo.title }}{% else %}{{ block.super }}{% endif %}{% endblock %}
{% block description %}{{ seo.description|default:"" }}{% endblock %}

{% block body_class %}{{ block.super }} home {% endblock %}

{% block main %}
<section class="box-banners fadeIn wow">
    <div id="banners" class="banners owl-carousel owl-theme owl-dot-style">

        {# for item in banner #}
            {# thumbnail item.imagem "1920x736" as im #}
            <div class="item-banner" style="background-image:url('../static/images/banner2.jpg');">
                {% if item.url %}
                <a href="{{ item.url }}" target="{{ item.target }}"></a>

                {% endif %}
                <div class="box-form-banner center">
                    <div class="box-cont">
                        <div class="text-box new">
                            <div class="titulo">
                                <p>{{ banner.titulo }}</p>
                            </div>
                            <div class="legenda">
                                <p>{{ banner.legenda }}</p>
                            </div>
                        </div>
                    {% include 'newsletter/_form.html' %}
                    </div>
                </div>
            </div>
            {# endthumbnail #}
        {# endfor #}
    </div>
</section>

